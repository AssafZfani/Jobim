<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="zfani.assaf.jobim">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup, GoogleAppIndexingWarning">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icon" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/orange" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".views.activities.SplashActivity">

            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>

        <activity
            android:name=".views.activities.MainActivity"
            android:windowSoftInputMode="adjustNothing" />

        <activity android:name=".views.activities.JobInfoActivity" />

        <activity android:name=".views.activities.JobsEmployer" />

        <activity
            android:name=".views.activities.FillDetails"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".views.activities.AddNewJob"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".views.activities.FilterQuestion"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".views.activities.MakingContact"
            android:windowSoftInputMode="adjustNothing" />

        <service
            android:name=".services.FireBaseMessagingService"
            android:exported="false">

            <intent-filter>

                <action android:name="com.google.firebase.MESSAGING_EVENT" />

            </intent-filter>

        </service>

    </application>

</manifest>