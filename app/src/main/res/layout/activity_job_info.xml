<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/llJobFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/llFavorite"
            style="@style/LinearLayout">

            <Button
                android:id="@+id/btnFavorite"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tvFavorite"
                style="@style/text_view_regular"
                android:gravity="center"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llJobsEmployer"
            style="@style/LinearLayout">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/jobs_employer" />

            <TextView
                style="@style/text_view_regular"
                android:gravity="center"
                android:text="ג'ובים נוספים\n ממעסיק זה"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llShare"
            style="@style/LinearLayout">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/share" />

            <TextView
                style="@style/text_view_regular"
                android:gravity="center"
                android:text="שתף עם\n חברים"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDelete"
            style="@style/LinearLayout">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/delete2" />

            <TextView
                style="@style/text_view_regular"
                android:gravity="center"
                android:text="הסתר\nג'וב"
                android:textColor="@android:color/holo_orange_dark" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>