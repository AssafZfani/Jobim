<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription, HardcodedText, LabelFor">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp">

        <include
            android:id="@+id/sendMessageCheckBox"
            layout="@layout/check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp">

        <include
            android:id="@+id/callCheckBox"
            layout="@layout/check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingEnd="15dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp">

        <include
            android:id="@+id/sendEmailCheckBox"
            layout="@layout/check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="35dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/contactText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@android:color/black"
        android:typeface="monospace" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/phoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1">

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="אנא הזינו מספר טלפון ליצירת קשר טלפוני"
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="@android:color/darker_gray"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/smsNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="אנא הזינו מספר טלפון למשלוח SMS"
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="@android:color/darker_gray"
            android:typeface="monospace" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:background="@android:color/white"
            android:padding="20dp"
            android:text="+972"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="17.5sp"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1">

        <EditText
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:hint="אנא הזינו כתובת מייל"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@android:color/darker_gray"
            android:typeface="monospace" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        android:gravity="bottom" />

</LinearLayout>